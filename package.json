{
  "name": "graphql-server-scafold",
  "version": "1.0.0",
  "description": "GraphQL server scafolding",
  "author": "Jos√© Antonio Reyes <imjaroiswebdev@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start-dev": "standard && nodemon --inspect ./private/server/entry.js",
    "precommit": "standard && lint-staged",
    "prepush": "standard",
    "standard-fix": "standard --fix"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "graphql": "^0.11.7",
    "graphql-server-express": "^1.2.0",
    "graphql-subscriptions": "^0.5.5",
    "mongoose": "^4.13.6",
    "subscriptions-transport-ws": "^0.9.4"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "6.0.0",
    "nodemon": "^1.12.5",
    "prettier": "1.9.1",
    "standard": "^10.0.3"
  },
  "standard.validate": ["javascript", "javascriptreact", "html"],
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  }
}
